@model (Category Categorydto, List<Category> Categorylist)

@{ int count = 1; }


<div class="row">
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Create New Category</h4>
                <form asp-action="Create" asp-controller="Category" asp-area="AdminPanel" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label asp-for="@Model.Categorydto.Name" class="col-sm-3 col-form-label">Category</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Categorydto.Name" class="form-control" id="exampleInputEmail2" placeholder="Type category name...">
                            <span asp-validation-for="@Model.Categorydto.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Photo :</label>
                                <div class="col-sm-9">
                                    <input asp-for="@Model.Categorydto.Photo" class="form-control" >
                                    <span asp-validation-for="@Model.Categorydto.Photo" class="text-danger"></span>
                                </div>
                            </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="List" asp-controller="Category" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <div class="mt-auto">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Product Count</th>
                                    <th>Created Date</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var CategoryDto in Model.Categorylist)
                                {
                    <tr>
                        <td>@count</td>
                        <td class="py-1">
                        <img src="~/AdminPanel/img/category/@CategoryDto.Image" class="mr-2" alt="image">
                        </td>
                        <td>@CategoryDto.Name</td>
                        <td>@CategoryDto.Products.Count()</td>
                        <td>@CategoryDto.CreatedDate.ToString("MMM dd")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>