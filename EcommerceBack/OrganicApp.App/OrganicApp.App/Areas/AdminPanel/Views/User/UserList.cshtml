@model List<AppUser>
@{
    var count = 1;
}


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Users</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    User
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Created Date
                                </th>
                                <th>
                                    Roles
                                </th>
                                 <th>
                                    
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.CreatedDate.ToString("dd MMM")
                    </td>
                    <td>
                        <getUserInfo user-id="@item.Id"></getUserInfo>
                    </td>

                    <td>
                        <a asp-action="AssignRole" asp-controller="User" asp-route-id="@item.Id">Add a Role</a>
                    </td>
                </tr>count++;
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            </div>
           </div>
           </div>