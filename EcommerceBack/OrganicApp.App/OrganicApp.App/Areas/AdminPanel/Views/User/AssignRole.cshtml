@model RoleAssignSendModel


<form asp-action="AssignRole" asp-controller="User" asp-area="AdminPanel" method="post" >

    <input type="hidden" asp-for="@Model.UserId"/>

    <div style="display:flex; gap:20px;" class="list-group">
        @for (int i = 0; i < Model.Roles?.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Roles[i].RoleId"/>
            <input type="hidden" asp-for="@Model.Roles[i].Name"/>
            <label  class="list-group-item">
                <input style="cursor:pointer;" class="form-check-input me-1" type="checkbox" asp-for="@Model.Roles[i].Exist" />
            @Model.Roles[i].Name
        </label>
        }
    </div>

    <div style="margin-top:20px;" class="mb-3">
        <button style="cursor:pointer;" type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>